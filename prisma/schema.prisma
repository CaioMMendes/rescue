generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rescue {
  id             String   @id @default(uuid())
  contactName    String   @default("VÃ­tima")
  phoneNumber    String
  peopleQuantity Int
  note           String?
  accomplished   Boolean  @default(false)
  address        Address?
  createdAt      DateTime @default(now())
  updateddAt     DateTime @updatedAt
}

model Shelter {
  id              String   @id @default(uuid())
  name            String
  type            String   @default("People")
  capacity        Int?
  shelteredPeople Int?
  imageUrl        String?
  address         Address?
  createdAt       DateTime @default(now())
  updateddAt      DateTime @updatedAt
}

model Water {
  id         String   @id @default(uuid())
  name       String
  address    Address?
  createdAt  DateTime @default(now())
  updateddAt DateTime @updatedAt
}

model Address {
  id             String   @id @default(uuid())
  street         String
  number         String
  district       String
  referencePoint String?
  city           String
  state          String   @default("RS")
  rescue         Rescue?  @relation(fields: [rescueId], references: [id])
  rescueId       String?  @unique
  shelter        Shelter? @relation(fields: [shelterId], references: [id])
  shelterId      String?  @unique
  water          Water?   @relation(fields: [waterId], references: [id])
  waterId        String?  @unique
  createdAt      DateTime @default(now())
  updateddAt     DateTime @updatedAt
}
